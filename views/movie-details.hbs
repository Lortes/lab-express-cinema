<div class="container details-movie">
    <h2>DETAILS OF MOVIE "{{title}}"</h2>
    <hr>

    <div class="row">
        <div class="col-2">
            <img src="{{image}}" alt="">
        </div>
        <div class="col-10">
            <h1>{{title}}</h1>
            <h2>DIRECTOR: {{director}}</h2>
            <p><strong>STARS</strong></p>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>
            {{#each showtimes}}
            {{this}} |
            {{/each}}
        </div>
    </div>
    <hr>

    <a href="/" class="btn btn-dark">Volver a inicio</a>
    <a href="/movies" class="btn btn-dark">Volver a coleccion de pel√≠culas</a>


</div>